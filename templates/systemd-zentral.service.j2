{{ ansible_managed | comment }}

[Unit]
Description=Zentral server
#Requires=redis.service
#Wants=mysqld.service postgresql.service
#After=redis.service
 
[Service]
## no daemon mode
Type=simple
## daemon mode
#Type=forking
User=_zentral
Group=_zentral
Environment="ZENTRAL_CONF_DIR={{ zentral_homedir }}/zentral/conf/start/zentral"
WorkingDirectory={{ zentral_homedir }}/zentral
ExecStart=/usr/bin/{{ zentral_python3 | default('python3') }} server/manage.py runserver {{ zentral_ip_listen }}:{{ zentral_port }}
ExecReload=/bin/kill -HUP $MAINPID
UMask=0022
TimeoutSec=30
RestartSec=15s
#Restart=always
Restart=on-failure
SyslogIdentifier=zentral
PrivateTmp=true
 
[Install]
WantedBy=multi-user.target
